        <p>Status: <span id="s3" class="normal">Normal</span></p>
    </div>

    <button class="btn" onclick="simulate()">Simulate Fault</button>

</div>

<script>
    function simulate() {

        let v1 = Math.floor(Math.random() * 250);
        let v2 = Math.floor(Math.random() * 250);
        let v3 = Math.floor(Math.random() * 250);

        document.getElementById("v1").innerHTML = v1;
        document.getElementById("v2").innerHTML = v2;
        document.getElementById("v3").innerHTML = v3;

        checkStatus(v1, "s1");
        checkStatus(v2, "s2");
        checkStatus(v3, "s3");
    }

    function checkStatus(voltage, id) {

        if (voltage < 180) {
            document.getElementById(id).innerHTML = "FAULT ⚠";
            document.getElementById(id).className = "fault";
        } else {
            document.getElementById(id).innerHTML = "Normal";
            document.getElementById(id).className = "normal";
        }
    }
</script>

